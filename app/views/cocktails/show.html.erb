<div class="container">

  <p id="notice"><%= notice %></p>

  <p class= "add">
    <strong>Name:</strong>
    <%= @cocktail.name %>
  </p>
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 150, width: 150, crop: :fill %>
  <% else %>
    <div class="card-no-image" style="background-image: url('<%= image_path 'drink1.jpg' %>')"></div>
  <% end %>


  <p>
    <%= link_to '+ Add a Dose', new_cocktail_dose_path(@cocktail), class: "add" %>
  </p>
  <div class="box">

  <p id="notice"><%= notice %></p>

  <% if @cocktail.doses.count.zero? %>
    <p class= "add">
      Be the first to leave a dose
    </p>

  <% else %>

    <ol>
      <% @cocktail.doses.each do |dose| %>

        <li >
          <%= dose.ingredient.name %>:
          <%= dose.description %> Â·
          <%= link_to dose_path(dose.id), class: "trash", method: :delete, data: { confirm: "Delete #{dose.ingredient.name}?" } do %>
            <i class="far fa-trash-alt" aria-hidden="true"></i>
          <% end %>
        </li>
      <% end %>
    </ol>

  <% end %>
  </div>

  <%= link_to 'Back', cocktails_path, class: "add" %>

</div>
