<%= render 'shared/banner' %>

<p id="notice"><%= notice %></p>

<div class="container">


  <h1 class= "add">Cocktails List</h1>

    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-4">
          <div class="card">
            <% if cocktail.photo.key %>
              <% background_url = cl_image_path cocktail.photo.key, height: 150, width: 150, crop: :fill %>
            <% else %>
              <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
            <% end %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">
              <%= link_to cocktail.name, cocktail_path(cocktail), class: "link_card" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
